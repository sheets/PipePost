!!!
%html{lang: "en"}
	%head
		%meta{charset: "utf-8"}/
		%title Inspira - Your Inspiration!
		%meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
		%meta{content: "Responsive Minimal Bootstrap Theme", name: "description"}/
		%meta{content: "responsive,minimal,bootstrap,theme", name: "keywords"}/
		%meta{content: "", name: "author"}/

		=stylesheet_link_tag('static_pages')
		=javascript_include_tag("application")
		=javascript_include_tag("jquery.min.js")
		=javascript_include_tag("bootstrap.min.js")
		=javascript_include_tag("jquery.isotope.min.js")
		=javascript_include_tag("jquery.prettyPhoto.js")
		=javascript_include_tag("easing.js")
		=javascript_include_tag("jquery.ui.totop.js")
		=javascript_include_tag("selectnav.js")
		=javascript_include_tag("ender.js")
		=javascript_include_tag("jquery.lazyload.js")
		=javascript_include_tag("rs-plugin/js/jquery.themepunch.revolution.min.js")
		=javascript_include_tag("jquery.flexslider-min.js")
		=javascript_include_tag("custom.js")
		= csrf_meta_tag
		/ Javascript Files for current page only
		%script{src: "/assets/rev-setting-1.js"}
	%body
		#wrapper
			/top slide bar attached
			= render "/static_pages/partials/top_sliding_bar"
			/ header begin
			%header
				/top social bar attached
				= render "/static_pages/partials/top_social_bar"
				.container
					-flash.each do |name, msg|
						-alert_var = name == :notice ? "success" : "error"
						.alert{:class=>"alert-#{alert_var}"}
							= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String)
					#logo
						.inner
							%a{href: "index.html"}
								=image_tag("logo.png")
					/ mainmenu attached
					= render "/static_pages/partials/main_menu"
				= render "/static_pages/partials/user_drop_down"
					
			= yield
			=render "/static_pages/partials/footer"




