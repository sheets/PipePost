/ =render "/static_pages/partials/subheader"
/ content begin
#content
	.container
		%h1 
			Braintree Customer Form
			%form#braintree-payment-form{action: transactions_create_customer_path, method: "POST", :validate =>:true}
				%h2 Customer Information
				%p
					%label First Name
					%input#first_name{name: "braintree[first_name]", type: "text"}/
				%p
					%label{for: "last_name"} Last Name
					%input#last_name{name: "braintree[last_name]", type: "text"}/
				%p
					%label{for: "postal_code"} Postal Code
					%input#postal_code{name: "braintree['postal_code']", type: "text"}/
				%h2 Credit Card
				%p
					%label Amount
					%input{name: "braintree[amount]", type: "text",:value=>@payment,:class=>"required require"}/
				%p
					%label Card Number
					%input{autocomplete: "off", "data-encrypted-name" => "braintree[credit_card][number]", size: "20", type: "text",:class=>"required require"}/
				%p
					%label CVV
					%input{autocomplete: "off", "data-encrypted-name" => "braintree[credit_card][cvv]", size: "4", type: "text"}/
				%p
					%label Expiration (MM/YYYY)
					%input{"data-encrypted-name" => "braintree[credit_card][expiration_date]", size: "2", type: "text"}/
				%input.submit-button{type: "submit"}/
			%script{src: "https://js.braintreegateway.com/v1/braintree.js"}
:javascript
	var braintree = Braintree.create("");
	braintree.onSubmitEncryptForm("braintree-payment-form");
	$("#braintree-payment-form").enableClientSideValidations();

